#caddy想要访问该文件夹，必须修改 system 下的caddy.server 把用户和组改成 root 然后重新启动Caddy
box.pcr.galibang.cn {
    auto_https false
    gzip
    root /etc/caddy/www/vuepcr
    index index.html
    proxy /bd www.google.co.jp
    #proxy /api 127.0.0.1:8081{
    #    transparent
    #}
    rewrite / {
        regexp .*
        to {path}/
    }
}
api.box.pcr.galibang.cn {
    auto_https false
    gzip
    proxy / 127.0.0.1:8081
}